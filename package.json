{
  "name": "contracts-registry-llm",
  "version": "1.0.0",
  "description": "A comprehensive blockchain contract deployment registry optimized for LLM consumption",
  "main": "helpers/query.js",
  "type": "module",
  "scripts": {
    "build": "node helpers/build.js && node helpers/build-api.js && node helpers/generate-seo-pages.js && node helpers/generate-chains-page.js",
    "build:data": "node helpers/build.js && node helpers/build-api.js",
    "build:seo": "node helpers/generate-seo-pages.js && node helpers/generate-chains-page.js",
    "validate": "node helpers/validate.js",
    "fetch-blocks": "node helpers/fetch-deployment-blocks.js",
    "fetch-logos": "node helpers/download-logos.js",
    "fetch-chain-logos": "node helpers/download-chain-logos-v2.js",
    "scaffold": "node scripts/add-protocol.js",
    "test": "node --test",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "contracts",
    "registry",
    "deployments",
    "defi",
    "web3",
    "llm",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
