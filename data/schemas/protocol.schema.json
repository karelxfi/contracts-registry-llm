{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://subsquid.io/schemas/protocol.schema.json",
  "title": "Protocol Schema",
  "description": "Schema for blockchain protocol definitions",
  "type": "object",
  "required": ["id", "name", "type", "contracts"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique protocol identifier (lowercase, kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable protocol name"
    },
    "type": {
      "type": "string",
      "enum": ["dex", "lending", "liquid-staking", "bridge", "aggregator", "derivatives", "cdp", "yield", "nft-marketplace", "oracle", "perpetuals", "other"],
      "description": "Protocol category"
    },
    "website": {
      "type": "string",
      "format": "uri"
    },
    "github": {
      "type": "string",
      "format": "uri"
    },
    "docs": {
      "type": "string",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable tags (amm, concentrated-liquidity, etc.)"
    },
    "contracts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "$ref": "contract.schema.json"
        }
      },
      "minProperties": 1
    },
    "deployments": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "$ref": "deployment.schema.json"
        }
      }
    }
  }
}
